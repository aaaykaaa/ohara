<div class="p-subMv <% if( typeof img === 'undefined'){  %>--border<% } %>">
    <div class="p-subMv__inner l-inner">
        <div class="p-subMv__wrap">
            <hgroup class="p-subMv__title">
                <p class="p-subMv__en"><%- subtitle %></p>
                <h1 class="p-subMv__ja"><%- title %></h1>
            </hgroup>
            <% if( typeof img !== 'undefined'){  %>
            <picture class="p-subMv__img">
                <source srcset="./images/common/subMv_<%= img %>.webp" type="image/webp" />
                <img src="./images/common/subMv_<%= img %>.png" alt="ファーストビュー">
            </picture>
            <% } %>
        </div>
    </div>
</div>